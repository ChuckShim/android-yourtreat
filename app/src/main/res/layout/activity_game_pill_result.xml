<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67deb3">

    <com.google.android.gms.ads.AdView
        android:layout_alignParentBottom="true"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_game_macaroon_unit_id"/>

    <TextView
        android:id="@+id/txt_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/adView"
        android:layout_alignLeft="@id/adView"
        android:layout_alignRight="@id/adView"
        android:layout_alignBottom="@id/adView"
        android:gravity="center"
        android:text="â“’HoneyJii"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/game_pill_img_result"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_game_play_again"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/common_btn_play_again_selector"/>

            <View
                android:layout_width="15dp"
                android:layout_height="fill_parent"/>

            <Button
                android:id="@+id/btn_game_menu"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/common_btn_menu_selector"/>

            </LinearLayout>
        </LinearLayout>




</RelativeLayout>
